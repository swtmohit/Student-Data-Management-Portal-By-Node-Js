<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
    rel="stylesheet">
</head>

<body>
  <div class="container-fluid">
    <div class="row addimg">
      <div class="col-7 rights p-0">
        <img src="img/1.png" alt="">
      </div>
      <div class="col-5 right">
        <div class="container">
          <div class="row ">
            <div class="col-12">
              <h1 class="text-light text-center student">Add Student</h1>
              <form action="web/create/user" class="form-submit" method="post">
                <hr class="text-light">
                <label class="text-light mb-4 fs-5" for="student_name">Student Name
                  <input required type="text" placeholder="Enter Student Name" id="student_name" name="name" size="40"
                    class="form-control mt-2">
                </label>
                <label class="text-light mb-4 fs-5" for="mobile_No">Mobile No
                  <input required type="text" placeholder="Enter Mobile No" id="mobile_No" size="40" name="phone"
                    class="form-control mt-2">
                </label>
                <label class="text-light mb-4 fs-5" for="Email_id">Email Id
                  <input required type="mail" size="40" placeholder="Enter Student Email Id" name="email" id="Email_id"
                    class="form-control mt-2">
                </label>
                <br>
                <label class="text-light fs-5" for="">Gender :-</label>
                <label for="male" class="text-light">Male</label>
                <input required id="male" type="radio" name="gender" value="male"> &nbsp;&nbsp;
                <label for="female" class="text-light">Female</label>
                <input required id="Female" type="radio" value="female" name="gender">
                <br>
                <button class="btn btn-success mt-3" type="submit">Add Student</button>
              </form>
              <hr>
              <a href="./index">
                <h6 class="BackToHome text-white mt-2">Back to Home page</h6>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('globals/scripts')%>


</body>

</html>